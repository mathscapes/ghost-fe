{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">
    <a class="gh-card-link" href="{{url}}">
        {{!-- {{#if feature_image}}
            <img class="gh-card-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
            />
        {{/if}} --}}
    <div class="gh-card-content">

        <span class="gh-post-meta">
            {{#if primary_tag}}
            <section class="post-full-tags">
                {{#primary_tag}}
                {{name}}
                {{!-- <a href="{{url}}">{{name}}</a> --}}
                {{/primary_tag}}
            </section>
            {{/if}}
        </span>

        <h1 class="gh-title">{{title}}</h1>

        {{!-- <span class="gh-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
        <h2 class="gh-card-title">{{title}}</h2> --}}
        <p class="gh-excerpt">{{excerpt}}</p>

        <div class="gh-post-authors">
            By {{#foreach authors}}{{name}}{{/foreach}} &nbsp;&nbsp;&nbsp;&nbsp; <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> &nbsp;&nbsp;&nbsp;&nbsp; {{reading_time}}
        </div>

        <strong>Read more</strong>
    </div>
    </a>
</article>